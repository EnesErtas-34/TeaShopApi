@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-36">
        <div class="card">

            <div class="card-header">
                <h5>Hakkımızda</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <tr>
                        <th>#</th>
                        <th>Açıklama</th>
                        <th>Resim</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AboutID</td>
                            <td>@item.Description</td>
                            <td><img src="@item.ImageUrl" style="height:75px;width:75px" /></td>
                            <td><a href="/Admin/About/DeleteAbout/@item.AboutID" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/About/UpdateAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/Admin/About/CreateAbout/" class="btn btn-outline-primary">Yeni Hakkımızda Yazısı Girişi</a>
            </div>
        </div>
    </div>
    <!-- [ sample-page ] end -->
</div>

