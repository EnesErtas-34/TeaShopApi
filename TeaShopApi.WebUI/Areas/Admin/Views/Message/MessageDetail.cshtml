@model ResultMessageDto
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Mesaj Detay Sayfası</h3>

<table class="table table-bordered">
    <tr>
        <th>Ad Soyad:</th>
        <td>@Model.MessageSenderName</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.MessageEmail</td>
    </tr>
    <tr>
        <th>Konu:</th>
        <td>@Model.MessageSubject</td>
    </tr>
    <tr>
        <th>Tarih:</th>
        <td>@Model.MessageSendDate</td>
    </tr>
    <tr>
        <th>Mesaj:</th>
        <td>@Model.MessageDetail</td>
    </tr>
</table>

